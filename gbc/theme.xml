<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="logo">
			<path>./_inc/background.jpg</path>
		</image>
	</view>
	
	<view name="basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed, video"> 		
		<textlist name="gamelist">
			<pos>0.3356 0.2783</pos>
			<size>0.22125 0.2692</size>
		</textlist>	
		
   		<image name="bezel" extra="true">
			<path>./_inc/bezel_detailed.png</path>
		</image>
		
		<image name="md_image">
			<pos>1 1</pos>
			<origin>0 0</origin>
			<rotation>0</rotation>
		</image>
	</view>
	
	<feature supported="video">
      <view name="video">
		<video name="md_video">
			<pos>0.3356 0.2783</pos>
			<maxSize>0.23125 0.2792</maxSize>
			<rotation>-5</rotation>
		</video>
      </view>
	</feature>
 	
